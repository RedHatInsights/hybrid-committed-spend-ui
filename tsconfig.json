{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es5",
  },
  "include": [
    "./src/index.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "./*.js",
    "./*.d.ts"
  ],
}
