{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "./src/**/*.ts*",
    "./test/**/*"
  ],
  "exclude": [
    "./node_modules/**",
    "./src/**/*.test.ts*",
    "./src/__mocks__/*"
  ]
}
